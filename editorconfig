# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# General
[*]
charset = utf-8
end_of_line = LF

indent_style = space
indent_size = 2

insert_final_newline = true
trim_trailing_whitespace = true

# Makefile
[Makefile]
indent_style = tab

[makefile]
indent_style = tab

# golang
[*.go]
indent_style = tab

# git
[{.gitattributes,.gitignore,.gitmodules}]
indent_style = tab

# markdown
[*.md]
trim_trailing_whitespace = false
